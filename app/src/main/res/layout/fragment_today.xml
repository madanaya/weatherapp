<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#000"
    tools:context=".Fragments.TodayFragment">



        <TableLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:stretchColumns="*"
            android:shrinkColumns="*">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_margin="5dp" >


                <androidx.cardview.widget.CardView
                    android:paddingTop="10sp"
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20sp"
                    android:background="@color/colorVeryDarkGrey"
                    card_view:cardCornerRadius="10sp"
                    >
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent"
                        android:background="@color/colorVeryDarkGrey"
                        android:paddingTop="15sp"
                        android:paddingBottom="15sp"
                        >

                        <ImageView
                            android:layout_gravity="center"
                            android:tint="@color/colorIcon"
                            android:src="@drawable/weather_windy"
                            android:layout_width="55sp"
                            android:layout_height="55sp"
                            />

                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/today_windspeed_val"
                            android:textSize="20sp"
                            android:text="2.60 mph"
                            android:textColor="@color/colorWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                        <TextView
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="Wind Speed"
                            android:textSize="18sp"
                            android:textColor="@color/colorDarkGrey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:paddingTop="10sp"
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20sp"
                    android:background="@color/colorVeryDarkGrey"
                    card_view:cardCornerRadius="10sp"
                    >
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent"
                        android:background="@color/colorVeryDarkGrey"
                        android:paddingTop="10sp"
                        android:paddingBottom="10sp"
                        >

                        <ImageView
                            android:layout_gravity="center"
                            android:tint="@color/colorIcon"
                            android:src="@drawable/gauge"
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            />

                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/today_pressure_val"
                            android:textSize="20sp"
                            android:text="2.60 mph"
                            android:textColor="@color/colorWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                        <TextView
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="Pressure"
                            android:textSize="18sp"
                            android:textColor="@color/colorDarkGrey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:paddingTop="10sp"
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/colorVeryDarkGrey"
                    card_view:cardCornerRadius="10sp"
                    >
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent"
                        android:background="@color/colorVeryDarkGrey"
                        android:paddingTop="10sp"
                        android:paddingBottom="10sp"
                        >

                        <ImageView
                            android:layout_gravity="center"
                            android:tint="@color/colorIcon"
                            android:src="@drawable/weather_pouring"
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            />

                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/today_precipitation_val"
                            android:textSize="20sp"
                            android:text="2.60 mph"
                            android:textColor="@color/colorWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                        <TextView
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="Precipitation"
                            android:textSize="18sp"
                            android:textColor="@color/colorDarkGrey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>



            </TableRow>



            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_margin="5dp" >


                <androidx.cardview.widget.CardView
                    android:paddingTop="10sp"
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20sp"
                    android:background="@color/colorVeryDarkGrey"
                    card_view:cardCornerRadius="10sp"
                    >

                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent"
                        android:background="@color/colorVeryDarkGrey"
                        android:paddingTop="10sp"
                        android:paddingBottom="10sp"
                        >

                        <ImageView
                            android:layout_gravity="center"
                            android:tint="@color/colorIcon"
                            android:src="@drawable/thermometer"
                            android:layout_width="63sp"
                            android:layout_height="63sp"
                            />

                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/today_temperature_val"
                            android:textSize="20sp"
                            android:text="2.60 mph"
                            android:textColor="@color/colorWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                        <TextView
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="Temperature"
                            android:textSize="18sp"
                            android:textColor="@color/colorDarkGrey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:paddingTop="10sp"
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20sp"
                    android:background="@color/colorVeryDarkGrey"
                    card_view:cardCornerRadius="10sp"
                    >
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent"
                        android:background="@color/colorVeryDarkGrey"
                        android:paddingTop="10sp"
                        android:paddingBottom="10sp"
                        >

                        <ImageView
                            android:id="@+id/today_icon"
                            android:layout_gravity="center"
                            android:src="@drawable/weather_sunny"
                            android:layout_width="80sp"
                            android:layout_height="80sp"
                            />

                        <TextView
                            android:layout_marginTop="10sp"
                            android:id="@+id/today_summary"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="Sunny"
                            android:textSize="18sp"
                            android:textColor="@color/colorDarkGrey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:paddingTop="10sp"
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/colorVeryDarkGrey"
                    card_view:cardCornerRadius="10sp"
                    >
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent"
                        android:background="@color/colorVeryDarkGrey"
                        android:paddingTop="15sp"
                        android:paddingBottom="15sp"
                        >

                        <ImageView
                            android:layout_gravity="center"
                            android:tint="@color/colorIcon"
                            android:src="@drawable/water_percent"
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            />

                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/today_humidity_val"
                            android:textSize="20sp"
                            android:text="2.60 mph"
                            android:textColor="@color/colorWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                        <TextView
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="Humidity"
                            android:textSize="18sp"
                            android:textColor="@color/colorDarkGrey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>



            </TableRow>


            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_margin="5dp" >


                <androidx.cardview.widget.CardView
                    android:paddingTop="10sp"
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20sp"
                    android:background="@color/colorVeryDarkGrey"
                    card_view:cardCornerRadius="10sp"
                    >
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent"
                        android:background="@color/colorVeryDarkGrey"
                        android:paddingTop="15sp"
                        android:paddingBottom="15sp"
                        >

                        <ImageView
                            android:layout_gravity="center"
                            android:tint="@color/colorIcon"
                            android:src="@drawable/eye_outline"
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            />

                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/today_visibility_val"
                            android:textSize="20sp"
                            android:text="2.60 mph"
                            android:textColor="@color/colorWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                        <TextView
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="Visibility"
                            android:textSize="18sp"
                            android:textColor="@color/colorDarkGrey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:paddingTop="10sp"
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20sp"
                    android:background="@color/colorVeryDarkGrey"
                    card_view:cardCornerRadius="10sp"
                    >
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent"
                        android:background="@color/colorVeryDarkGrey"
                        android:paddingTop="10sp"
                        android:paddingBottom="10sp"
                        >

                        <ImageView
                            android:layout_gravity="center"
                            android:tint="@color/colorIcon"
                            android:src="@drawable/weather_fog"
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            />

                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/today_cloudcover_val"
                            android:textSize="20sp"
                            android:text="2.60 mph"
                            android:textColor="@color/colorWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                        <TextView
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="Cloud Cover"
                            android:textSize="18sp"
                            android:textColor="@color/colorDarkGrey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:paddingTop="10sp"
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/colorVeryDarkGrey"
                    card_view:cardCornerRadius="10sp"
                    >
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent"
                        android:background="@color/colorVeryDarkGrey"
                        android:paddingTop="10sp"
                        android:paddingBottom="10sp"
                        >

                        <ImageView
                            android:layout_gravity="center"
                            android:tint="@color/colorIcon"
                            android:src="@drawable/earth"
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            />

                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/today_ozone_val"
                            android:textSize="20sp"
                            android:text="2.60 mph"
                            android:textColor="@color/colorWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                        <TextView
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text = "Ozone"
                            android:textSize="18sp"
                            android:textColor="@color/colorDarkGrey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>



            </TableRow>

        </TableLayout>


</LinearLayout>